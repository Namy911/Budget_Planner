<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.endava.budgetplanner.authentication.ui.views.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/scale_in"
            app:exitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.endava.budgetplanner.authentication.ui.views.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/scale_in"
            app:exitAnim="@anim/slide_out"
            app:popEnterAnim="@anim/slide_in"
            app:popExitAnim="@anim/scale_out" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.endava.budgetplanner.dashboard.ui.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/registerDataFragment"
        android:name="com.endava.budgetplanner.authentication.ui.views.RegisterDataFragment"
        android:label="RegisterDataFragment" >
        <action
            android:id="@+id/action_registerDataFragment_to_registerDataRolesFragment"
            app:destination="@id/registerDataRolesFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerDataRolesFragment"
        android:name="com.endava.budgetplanner.authentication.ui.views.RegisterDataRolesFragment"
        android:label="RegisterDataRolesFragment" >
        <action
            android:id="@+id/action_registerDataRolesFragment_to_welcomeFragment2"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.endava.budgetplanner.authentication.ui.views.RegisterFragment"
        android:label="register_data_fragment"
        tools:layout="@layout/register_data_fragment" >
        <action
            android:id="@+id/action_registerFragment_to_registerDataFragment"
            app:destination="@id/registerDataFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>